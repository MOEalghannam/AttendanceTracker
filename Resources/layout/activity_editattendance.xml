<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:minWidth="25px"
	android:minHeight="25px"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/relativeLayout1"
	android:background="@mipmap/backgroundpurple">
	<LinearLayout
		android:orientation="vertical"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/linearLayout6" >
		<LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
			android:layout_marginStart="100dp"
            android:id="@+id/linearLayout6">
            <ImageView
                android:src="@drawable/logo100pxrounded"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="@string/ActivityUpdateAtten"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:id="@+id/textView1"
                android:textColor="#F2F2F2"
                android:textStyle="normal" />
        </LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginTop="20dp"
			android:id="@+id/linearLayout2" >
			<TextView
				android:text="Text"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/classname"
				android:gravity="center"
				android:textSize="30dp"
				android:textColor="#FFFFFF"
				android:textStyle="bold" 
				/>
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="110dp"
			android:id="@+id/linearLayout4"
			android:layout_marginTop="20dp">
			<TextView
				android:text="@string/Absent_Times"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:id="@+id/textView2"
				android:layout_marginBottom="10dp"
				android:gravity="center"
				android:textColor="#FFFFFF"
				android:textStyle="bold"/>
			<EditText
				android:inputType="number"
				android:layout_width="50dp"
				android:layout_height="70dp"
				android:id="@+id/absentnumber"
				android:gravity="center"
				android:layout_gravity="center"
				android:textColor="#776E6E"
				android:textStyle="bold"
				android:background="@drawable/customfield"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout5"
			android:layout_marginTop="20dp">
			<Button
				android:text="@string/Submit_EditActivity"
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:id="@+id/submit"
				android:layout_gravity="center"
				android:background="@drawable/mybutton"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
	</LinearLayout>
	
</RelativeLayout>