<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:minWidth="25px"
	android:minHeight="25px"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/relativeLayout1"
	android:background="@mipmap/backgroundpurple">
	<LinearLayout
		android:orientation="vertical"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/linearLayout1" >
		<LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="50dp"
			android:layout_marginStart="100dp"
            android:id="@+id/linearLayout2">
            <ImageView
                android:src="@drawable/logo100pxrounded"
                android:layout_width="30dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView1" />
            <TextView
                android:text="@string/Activity_SearchClass"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:id="@+id/textView1"
                android:textColor="#F2F2F2"
                android:textStyle="normal" />
        </LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:minWidth="25px"
			android:minHeight="25px"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:id="@+id/linearLayout3"
			android:layout_marginTop="20dp">
			<EditText
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:id="@+id/classname"
			android:hint="@string/Enter_Class_Name"
			android:layout_marginTop="20dp"
			android:paddingLeft="10dp"
			android:layout_marginHorizontal="10dp"
			android:background="@drawable/customfield"/>
		<Button
			android:text="@string/UpdateInfoBTN"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/update_button"
			android:layout_margin="20dp"
			android:background="@drawable/mybutton"
			android:textColor="#FFFFFF"/>
		<Button
			android:text="@string/UpdateAttendanceBTN"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/updateatten_button"
			android:layout_marginHorizontal="20dp"
			android:background="@drawable/mybutton"
			android:textColor="#FFFFFF"/>
		</LinearLayout>
		
	</LinearLayout>
</RelativeLayout>